{
  "name": "bookmarking",
  "version": "1.0.0",
  "description": "网址收藏夹",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec electron .",
    "build.macos": "electron-builder --macos",
    "build.windows": "electron-builder --windows",
    "build.linux": "electron-builder --linux",
    "release.windows": "electron-builder --windows --publish onTagOrDraft",
    "windows-cert": "electron-builder create-self-signed-cert --publisher 吴仙杰"
  },
  "repository": "https://github.com/JasonWu73/electron-sample/tree/bookmarking",
  "homepage": "https://github.com/JasonWu73/electron-sample/tree/bookmarking",
  "keywords": [
    "Electron"
  ],
  "author": "吴仙杰 <wuxianjiezh@163.com>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^12.0.5",
    "electron-builder": "^22.11.2",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.electron.bookmarking",
    "productName": "网址收藏夹",
    "copyright": "Copyright © 2021 吴仙杰",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "certificateFile": "./private/吴仙杰.pfx",
      "certificatePassword": "",
      "publisherName": "吴仙杰"
    },
    "linux": {
      "category": "Utility",
      "target": "deb"
    }
  }
}
