{
  "name": "bookmarking",
  "version": "1.0.0",
  "description": "网址收藏夹",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec electron .",
    "build:mac": "electron-builder -m",
    "build": "electron-builder -w",
    "build:linux": "electron-builder -l",
    "release:windows": "electron-builder -w -p onTagOrDraft"
  },
  "repository": "https://github.com/JasonWu73/electron-sample/tree/bookmarking",
  "homepage": "https://github.com/JasonWu73/electron-sample/tree/bookmarking",
  "keywords": [
    "Electron"
  ],
  "author": "吴仙杰 <wuxianjiezh@163.com>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^12.0.5",
    "electron-builder": "^22.11.2",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "electron-log": "^4.3.5",
    "electron-updater": "^4.3.9",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.electron.bookmarking",
    "productName": "网址收藏夹",
    "copyright": "Copyright © 2021 吴仙杰",
    "files": [
      "**/*",
      "./build/tray@2x.png"
    ],
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "win": {
      "target": "nsis:x64"
    },
    "linux": {
      "category": "Utility",
      "target": "deb"
    }
  }
}
